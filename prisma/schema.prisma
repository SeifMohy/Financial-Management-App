// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

//prisma generated

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String        @id @default(cuid())
  name           String
  email          String        @unique
  image          String
  currentBalance Int?
  accessToken    String?
  //relations
  banks          Bank[]
  transactions   Transaction[]
}

model Bank {
  id           String        @id
  bankName     String?
  //relations
  user         User?         @relation(fields: [userId], references: [id])
  userId       String?
  transactions Transaction[]
}

model Transaction {
  id          String     @id
  date        String?
  amount      Float
  description String?
  //relations
  banks       Bank?      @relation(fields: [bankId], references: [id]) //might not have a current use case
  bankId      String?
  users       User?      @relation(fields: [userId], references: [id]) //might not have a current use case
  userId      String?
  categories  Category[] @relation("transaction-category")
}

model Category {
  id           String        @id @default(cuid())
  category     String?
  //relations
  transactions Transaction[] @relation("transaction-category")
}
