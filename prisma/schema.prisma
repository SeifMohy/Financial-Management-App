// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

//prisma generated

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String  @id @default(cuid())
  name           String?
  email          String? @unique
  image          String?
  currentBalance Int?
  //relations
  banks          Bank[]
}

model Bank {
  id           String        @id @default(cuid())
  bankName     String?
  //relations
  user         User?         @relation(fields: [userId], references: [id])
  userId       String?
  transactions Transaction[]
}

model Transaction {
  id         String     @id @default(cuid())
  date       String?
  amount     Int
  //relations
  banks      Bank?      @relation(fields: [bankId], references: [id])
  bankId     String?
  categories Category[] @relation("transaction-category")
}

model Category {
  id           String        @id @default(cuid())
  category     String?
  //relations
  transactions Transaction[] @relation("transaction-category")
}
